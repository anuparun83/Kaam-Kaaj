<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To do list</title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Anek+Gujarati:wght@100&family=Roboto:ital,wght@1,300&family=Sofia+Sans:wght@300&display=swap" rel="stylesheet">

</head>
<body>

  <%- include("header") -%>
   
  <div class="box" id="heading">
    <h1> <%= listtitle %></h1>
  </div>
  <div id="bg-img"></div>

  

  <div class="box">
    <% newListItems.forEach(function(item){ %>
       <form  action="/delete" method="post">
    <div class="item">
       <input type="checkbox" class="checkbox-round" onchange="this.form.submit()" name="checkbox" value="<%= item._id %>" >
      <p><%= item.name %></p> 
    </div>
   <input type="hidden" name="listName" value="<%= listtitle %>"></input>
  </form>
    <% })%>
            <form class="item" action="/" method="post">
              
              <input id="1234" type="text" name="newItem" placeholder=" ADD NEW" autocomplete="off" autofocus="ON" >
              <button type="submit" name="list"value="<%= listtitle %>" >+</button>
              
            </form>
          </div>  
</body>
<%- include("footer")-%>
</html>